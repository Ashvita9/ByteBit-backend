# ── Server ────────────────────────────────────────────────────────
PORT=4000
NODE_ENV=development

# ── PostgreSQL ────────────────────────────────────────────────────
DATABASE_URL=postgres://user:password@localhost:5432/bytebit_royale

# ── Redis ─────────────────────────────────────────────────────────
REDIS_URL=redis://127.0.0.1:6379/2

# ── JWT (must match your Django backend's secret) ─────────────────
JWT_SECRET=your-django-secret-key-here
JWT_ALGORITHM=HS256

# ── Battle Royale Defaults ────────────────────────────────────────
DEFAULT_MAX_PLAYERS=10
ROUND_COUNTDOWN_SECONDS=5
MATCH_TIMEOUT_SECONDS=600
CODE_EXECUTION_TIMEOUT_MS=10000

# ── CORS ──────────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000
